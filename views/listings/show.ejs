<% layout("/layouts/boilerplate") %>
<div class="row mt-3">
    <div class="col-8 offset-3">
    <h3>Listings Detail</h3>
    </div>
<div class="cards col-6 offset-3 show-card">
    <img src="<%= listing.image %>" class="card-img-top show-img" alt="listing-image">
  <div class="card-body">
    <p class="card-text">
  <b><%= listing.title %></b><br>
  <%= listing.description %><br>
  â‚¹ <%= listing.price ? new Intl.NumberFormat("en-IN").format(listing.price) : "N/A" %> <br>
  <%= listing.location %> <br>
  <%= listing.country %> <br><br>
</p>
  </div>
</div>
    <br/>
    <div class="btns">
    <a href="/listings/<%=listing._id%>/edit" class="btn btn-dark col-1 offset-3 edit-btn">Edit</a>
    
    <form action="/listings/<%= listing._id %>?_method=DELETE" method="POST">
        <button class="btn btn-dark offset-5">Delete</button>
    </form>
    </div>
</div>