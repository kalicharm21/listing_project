<% layout("/layouts/boilerplate") %>

<div class="row">
    <div class="col-8 offset-2">
        <br/><br/>
     <h3>Create A New Listing</h3>
    <form action="/listings" method="POST">
        <div class="mb-3">
            <label for="title" class="form-label">Title</label><br/>
        <input placeholder="Add A Catchy Title" name="listing[title]" type="text" class="form-control"/>
        </div>
        <div class="mb-3">
            <label for="description" class="form-label">Description</label><br/>
             <textarea name="listing[description]" placeholder="Enter Your description" class="form-control"></textarea>
        </div>
       <div class="mb-3">
            <label for="image" class="form-label">Image Link</label><br/>
        <input type="text" name="listing[image]" placeholder="Image URL" class="form-control"/>
       </div>
       <div class="row">
       <div class="mb-3 col-md-4">
            <label for="price" class="form-label">Price</label><br/>
            <input placeholder="1200" name="listing[price]" type="number" class="form-control"/>
       </div>
       
       <div class="mb-3 col-md-8">
           <label for="location" class="form-label">Country</label><br/>
           <input placeholder="Country" name="listing[country]" type="text" class="form-control"/>
       </div>
        </div>
        
         <div class="mb-3 ">   
            <label for="price" class="form-label">Location</label><br/>
            <input placeholder=" Location" name="listing[price]" type="text" class="form-control"/>
        </div>
        <button class="btn btn-dark add-btn mt-3">Add</button>
        <br><br>
    </form>
    </div>
</div>